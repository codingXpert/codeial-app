<li class="comment-container">
    <div class="comment-content">
    <p>
        <% if (locals.user && locals.user.id === comment.user.id) { %>
            <small class="comment-actions">
                <a href="/comments/delete/<%= comment.id %>">X</a>
            </small>
        <% } %>

          <%= comment.content %>
          <br>
          <small>
              <%= comment.user.name %>
          </small>
      </p> 
    </div>   
</li>